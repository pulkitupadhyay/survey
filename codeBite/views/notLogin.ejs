    .button button {
      border: none;
      outline: none;
      background: none;
      color:white;
    }
    
    @keyframes slide-in {
      0% {
        opacity: 0;
        transform: translate(-50%, -60%);
      }
      100% {
        opacity: 1;
        transform: translate(-50%, -50%);
      }
    }
    
    @keyframes background-animation {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
    
    body {
      background: linear-gradient(135deg, #ffa8a8, #c0c1fe, #a8ffb3);
      background-size: 400% 400%;
      animation: background-animation 10s ease infinite;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="message">
      <p style="font-family: 'Montserrat', sans-serif; font-weight: bold; font-size: 24px;">You are not logged in.</p>
      <p style="font-family: 'Montserrat', sans-serif; font-size: 18px;">Please log in to continue.</p>
    </div>
    
    <div class="button">
     <button onclick='myFun()' style="font-family: 'Montserrat', sans-serif; font-weight: bold; font-size: 18px;" > Go to Login</button>
    </div>
  </div>
  <script >
